<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".authoriztion.LoginScreen"
    android:orientation="vertical"
    android:background="@color/white">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="108dp"
        android:layout_height="83dp"
        android:layout_marginTop="140dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="#00000000"
        android:fontFamily="@font/rubik"
        android:textStyle="bold"
        android:text="Авторизуйтесь"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/log_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/backround12"
        android:fontFamily="@font/rubik_light"
        android:textSize="20sp"
        android:hint="  Введите ваш email"
        android:padding="10dp"
        android:drawableLeft="@drawable/messagel"/>
    <EditText
        android:id="@+id/pass_edit"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/backround12"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" Введите пароль"
        android:textSize="20sp"
        android:fontFamily="@font/rubik_light"
        android:padding="10dp"
        android:drawableLeft="@drawable/subtract"/>
    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:text="Войти"
        android:onClick="authClick"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FBC632"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="Войти с помощью"
        android:textSize="20sp" />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/ellipse_google"
        android:scaleType="center"
        android:src="@drawable/google" />

</LinearLayout>