<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon_drawable"
    tools:context=".fragments.StuffFragment">

    <TextView
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="422dp"
        android:text="С кем связаться?"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="165dp"
        android:layout_height="116dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="127dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="478dp"
        android:src="@drawable/image_stuf" />

    <TextView
        android:id="@+id/phoneNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="365dp"
        android:drawablePadding="10dp"
        android:text="Скорая помощь"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/policeNumberTextView"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="307dp"
        android:text="Полиция"
        android:drawablePadding="10dp"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/support"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="243dp"
        android:drawableLeft="@drawable/massage"
        android:drawablePadding="10dp"
        android:text="Написать в поддержку"
        android:textColor="@color/white"
        android:textSize="22sp" />



</RelativeLayout>