<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".authoriztion.RegisterScreen"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="108dp"
        android:layout_height="83dp"
        android:layout_marginTop="140dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="#00000000"
        android:fontFamily="@font/rubik"
        android:textStyle="bold"
        android:text="Зарегистрируйте аккаунт"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/reg_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_marginRight="10dp"
        android:background="@drawable/backround12"
        android:fontFamily="@font/rubik_light"
        android:hint="Введите ваш email"
        android:padding="10dp"
        android:drawableLeft="@drawable/messagel"/>

    <EditText
        android:id="@+id/pass_edit"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/backround12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="  Введите пароль"
        android:password="true"
        android:fontFamily="@font/rubik_light"
        android:padding="10dp"
        android:drawableLeft="@drawable/subtract"/>
    <EditText
        android:id="@+id/reg_password2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/backround12"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" Повторите пароль"
        android:password="true"
        android:textSize="20sp"
        android:padding="10dp"
        android:drawableLeft="@drawable/subtract"
        android:fontFamily="@font/rubik_light" />


    <Button
        android:id="@+id/button_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FBC632"
        android:text="Зарегистрироваться"
        android:textSize="20dp"
        android:onClick="regClick"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Зарегистрироваться с помощью"
        android:textSize="20sp" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/ellipse_google"
        android:scaleType="center"
        android:src="@drawable/google" />


</LinearLayout>